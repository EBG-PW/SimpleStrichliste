                    <p class="text-3xl font-semibold text-gray-900 flex items-center">
                         <span class="text-green-600 mr-2">&gt;</span>
                        <span id="shoppinglist-count">...</span>
                    </p>
                </div>
            </a>
        </div>
    </main>
    
    <script src="<%= domain %>/appjs/permission.js?<%= curentUnixTime %>" defer></script>
    <script src="<%= domain %>/appjs/translate.js?<%= curentUnixTime %>"></script>
    <script>
        async function fetchAdminData() {
            try {
                const response = await fetch('/api/v1/admin/overview', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    }
                });
                if (!response.ok) throw new Error('Network response was not ok');
                const data = await response.json();
                
                document.getElementById('user-count').textContent = i18next.t("Admin.Card.UsersCount", { count: data.usercount });
                document.getElementById('category-count').textContent = i18next.t("Admin.Card.CategoriesCount", { count: data.categoriescount });
                document.getElementById('item-count').textContent = i18next.t("Admin.Card.ItemsCount", { count: data.itemscount });
                // Add more counts as needed
            } catch (error) {
                console.error('Error fetching admin data:', error);
            }
        }

        document.addEventListener("DOMContentLoaded", async () => {
            fetchAdminData();
        });
    </script>
  </body>
</html>